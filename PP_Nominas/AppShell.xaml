<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PP_Nominas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PP_Nominas"
    xmlns:catEmpleado=  "clr-namespace:PP_Nominas.Views.Catalogos.Empleados"
    Shell.FlyoutBehavior="Flyout"
    Title="PP_Nominas">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Empleados"
        ContentTemplate="{DataTemplate catEmpleado:EmpleadoPage}"
        Route="EmpleadoPage" />

</Shell>
